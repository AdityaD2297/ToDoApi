# Docker Environment Variables
# Used for Docker Compose deployment

# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=docker
SERVER_PORT=8080

# Database Configuration (Docker)
DB_URL=jdbc:postgresql://postgres:5432/todoapp
DB_USERNAME=todo_user
DB_PASSWORD=todo_password

# JPA Configuration (Docker)
DDL_AUTO=update
SHOW_SQL=false
LOG_LEVEL=INFO

# JWT Configuration (Docker)
JWT_SECRET=docker_jwt_secret_key_for_development_only_change_in_production
JWT_EXPIRATION=86400000

# Management Endpoints
MANAGEMENT_ENDPOINTS=health,info,metrics

# CORS Configuration (Docker)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://frontend:3000

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BUCKET_CAPACITY=100

# Application Configuration
APP_NAME=ToDoApi
APP_VERSION=0.0.1-SNAPSHOT

# File Upload Configuration (Docker)
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/app/uploads

# Monitoring Configuration (Docker)
ENABLE_METRICS=true
METRICS_PORT=9090
