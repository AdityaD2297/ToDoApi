# Production Environment Variables
# Copy this file to .env and update with your actual values

# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# Database Configuration (Production)
DB_URL=jdbc:postgresql://your-production-db-host:5432/todoapp_prod
DB_USERNAME=todoapp_user
DB_PASSWORD=your_production_db_password

# JPA Configuration (Production)
DDL_AUTO=validate
SHOW_SQL=false
LOG_LEVEL=WARN

# JWT Configuration (Production - Use strong secrets!)
JWT_SECRET=CHANGE_THIS_TO_A_VERY_STRONG_RANDOM_SECRET_AT_LEAST_256_BITS_LONG_FOR_PRODUCTION
JWT_EXPIRATION=86400000

# Management Endpoints
MANAGEMENT_ENDPOINTS=health,info,metrics

# CORS Configuration (Production - Add your frontend domain)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BUCKET_CAPACITY=100

# Application Configuration
APP_NAME=ToDoApi
APP_VERSION=1.0.0

# Email Configuration (Production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_production_email@gmail.com
EMAIL_PASSWORD=your_production_app_password

# File Upload Configuration (Production)
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/app/uploads

# Monitoring Configuration (Production)
ENABLE_METRICS=true
METRICS_PORT=9090

# SSL Configuration (Production)
FORCE_HTTPS=true
SSL_KEYSTORE_PATH=/app/keystore.p12
SSL_KEYSTORE_PASSWORD=your_keystore_password

# Security Headers
SECURITY_HEADERS_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
